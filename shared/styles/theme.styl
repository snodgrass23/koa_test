body
  color main_text_color
  background bg_color

.wrap
  background wrap_bg_color
  padding 1em 2em

h1
  color h1_color

a
  color inherit
  text-decoration none
  &:hover
    text-decoration underline

input
  font-size 1.2em
  border form_element_border_style
  border-radius 5px

input[type=file]
  font-size 16px
  border none

form
  li
    position relative
    label
      position absolute
      top 0
      left -100%
      text-align right
      width 100%
      padding 10px
      color #777

button
  font-size 1.25em
  border solid 1px #ddd
  background: #eee
  border-radius: 3px

.micro
  font-size 0.8em
  color #999

.flash-messages
  background #c67315
  color #fff

